@model List<BeSkSalon.Models.Usluga>
@{
    ViewData["Title"] = "Usluge";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Usluge</h2>
        <div>
            <a asp-action="KreirajUslugu" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Dodaj uslugu
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Nazad
            </a>
        </div>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Naziv</th>
                        <th>Trajanje (min)</th>
                        <th>Cijena (KM)</th>
                        <th>Frizer</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usluga in Model)
                    {
                        <tr>
                            <td>@usluga.Id</td>
                            <td>@usluga.Naziv</td>
                            <td>@usluga.Trajanje</td>
                            <td>@usluga.Cijena.ToString("F2")</td>
                            <td>@usluga.Frizer.Ime (@usluga.Frizer.Tip)</td>
                            <td>
                                <a asp-action="UrediUslugu" asp-route-id="@usluga.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Uredi
                                </a>
                                <form asp-action="ObrisiUslugu" asp-route-id="@usluga.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Da li ste sigurni da želite obrisati uslugu?')">
                                        <i class="bi bi-trash"></i> Obriši
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Nema usluga u bazi podataka.</div>
    }
</div>
