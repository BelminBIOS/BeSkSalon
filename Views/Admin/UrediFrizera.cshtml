@model BeSkSalon.Models.ViewModels.FrizerViewModel
@{
    ViewData["Title"] = "Uredi frizera";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Uredi frizera</h2>
            <form asp-action="UrediFrizera" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Ime" class="form-label"></label>
                    <input asp-for="Ime" class="form-control" />
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tip" class="form-label"></label>
                    <select asp-for="Tip" class="form-select">
                        <option value="">-- Odaberite tip --</option>
                        <option value="Muški">Muški</option>
                        <option value="Ženski">Ženski</option>
                    </select>
                    <span asp-validation-for="Tip" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Sačuvaj izmjene</button>
                    <a asp-action="Frizeri" class="btn btn-secondary">Otkaži</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
