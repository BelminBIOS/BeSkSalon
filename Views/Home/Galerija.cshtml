@{
    ViewData["Title"] = "Galerija radova";
}
<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead text-muted">Pogledajte našu kolekciju najnovijih radova i stilova</p>
    </div>
    <div class="text-center mb-4">
        <div class="btn-group" role="group" aria-label="Filter kategorija">
            <button type="button" class="btn btn-outline-primary active" data-filter="all">Sve</button>
            <button type="button" class="btn btn-outline-primary" data-filter="muske">Muške frizure</button>
            <button type="button" class="btn btn-outline-primary" data-filter="zenske">Ženske frizure</button>
            <button type="button" class="btn btn-outline-primary" data-filter="farbanje">Farbanje</button>
            <button type="button" class="btn btn-outline-primary" data-filter="brada">Brada</button>
        </div>
    </div>
    <div class="row g-3" id="galerija-grid">
        <div class="col-md-4 col-sm-6 gallery-item" data-category="muske">
            <div class="card gallery-card">
                <img src="https://images.unsplash.com/photo-1605497788044-5a32c7078486?w=400&h=400&fit=crop" class="card-img-top" alt="Muška frizura 1">
                <div class="card-body">
                    <h6 class="card-title">Moderna muška frizura</h6>
                    <p class="card-text small text-muted">Fade sa teksturom na vrhu</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 gallery-item" data-category="muske">
            <div class="card gallery-card">
                <img src="https://images.unsplash.com/photo-1622286342621-4bd786c2447c?w=400&h=400&fit=crop" class="card-img-top" alt="Muška frizura 2">
                <div class="card-body">
                    <h6 class="card-title">Klasični undercut</h6>
                    <p class="card-text small text-muted">Elegantno i profesionalno</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 gallery-item" data-category="muske">
            <div class="card gallery-card">
                <img src="https://images.unsplash.com/photo-1503951914875-452162b0f3f1?w=400&h=400&fit=crop" class="card-img-top" alt="Muška frizura 3">
                <div class="card-body">
                    <h6 class="card-title">Buzz cut stilizovano</h6>
                    <p class="card-text small text-muted">Jednostavno i praktično</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 gallery-item" data-category="zenske">
            <div class="card gallery-card">
                <img src="https://images.unsplash.com/photo-1560869713-7d0a29430803?w=400&h=400&fit=crop" class="card-img-top" alt="Ženska frizura 1">
                <div class="card-body">
                    <h6 class="card-title">Duge talase</h6>
                    <p class="card-text small text-muted">Romantični stil sa volumenom</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 gallery-item" data-category="zenske">
            <div class="card gallery-card">
                <img src="https://images.unsplash.com/photo-1562322140-8baeececf3df?w=400&h=400&fit=crop" class="card-img-top" alt="Ženska frizura 2">
                <div class="card-body">
                    <h6 class="card-title">Bob frizura</h6>
                    <p class="card-text small text-muted">Moderan i elegantan bob</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 gallery-item" data-category="zenske">
            <div class="card gallery-card">
                <img src="https://images.unsplash.com/photo-1595475884562-073c30d45670?w=400&h=400&fit=crop" class="card-img-top" alt="Ženska frizura 3">
                <div class="card-body">
                    <h6 class="card-title">Feniranje i stilizovanje</h6>
